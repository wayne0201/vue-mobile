    @media (min-resolution: 3dppx)
      width: 300%
      height: 300%
      border-radius: $radius * 3
      transform: scale(.3333) translateZ(0)

border-none()
  &:before
    display: none
  &:after
    display: none

// 高清图片，匹配相应的2x 3x图
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (min-resolution: 3dppx)
    background-image: url($url + "@3x.png")

//以iphone6屏幕为标准屏幕的宽度
$design-width ?= 375px
// px2rem px转rem方法 其中乘10与/public/index.html里的auto函数里的 SCALE 常量相对应
$scale ?= 10
px2rem(value, dw = $design-width)
  unit(value / dw * $scale, 'rem')